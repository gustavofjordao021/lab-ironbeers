<div class="index-container">
    {{#each beers}}
    <div class="media">
        <img src={{this.image_url}} class="align-self-center mr-3" alt="Beer-image">
        <div class="media-body">
            <h3 class="mt-0">{{this.name}}</h3>
            <h5>{{this.tagline}}</h5>
            <p>{{this.description}}</p>
        </div>
    </div>
    {{/each}}
</div>